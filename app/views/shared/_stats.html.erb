<% @user ||= current_user %>
<div class="stats">
  <%= link_to user_followings_path(@user) do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t("global.following") %>
  <% end %>
  <%= link_to user_followers_path(@user) do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t("global.followers") %>
  <% end %>
</div>
